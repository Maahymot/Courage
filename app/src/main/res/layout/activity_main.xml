<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fffdfdfe">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">



        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:singleLine="false"
            android:background="@drawable/tempicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="محاسبه واحدهای دما"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:singleLine="false"
        android:background="@drawable/bmiicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="محاسبه شاخص توده بدنی"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:singleLine="false"
            android:background="#F54545" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="محاسبه واحد وزن"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</RelativeLayout>

</ScrollView>


